ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_MINUTES=1

# Database Configuration
DB_PATH=backend/db
