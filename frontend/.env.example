# Frontend Configuration
# API Configuration
VITE_API_URL=http://localhost:8000
VITE_API_VERSION=v1
VITE_API_TIMEOUT=5000

# Firebase Configuration
# Required for authentication and database
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_API_KEY=your-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-auth-domain
VITE_FIREBASE_STORAGE_BUCKET=your-storage-bucket
VITE_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
VITE_FIREBASE_APP_ID=your-app-id

# JWT Configuration
# Aligned with backend JWT settings
VITE_JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
VITE_JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Feature Flags
# Enable/disable specific features
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_DEBUG_MODE=false
VITE_ENABLE_OFFLINE_MODE=false

# Performance Configuration
# Adjust performance-related settings
VITE_MAX_CONCURRENT_REQUESTS=5
VITE_REQUEST_RETRY_COUNT=3
VITE_CACHE_TTL=3600

# UI Configuration
# Customize UI behavior
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true
VITE_DEFAULT_LOCALE=en

# Security Configuration
# Security-related settings
VITE_CSRF_TOKEN_HEADER=X-CSRF-Token
VITE_SESSION_TIMEOUT=3600

# App Configuration
VITE_APP_NAME=Automated Blog Generator
VITE_APP_DESCRIPTION=AI-powered blog post generation platform
VITE_APP_VERSION=1.0.0 